            "dependsOn": [],
            "tags": {
                "Department ": "Finance",
                "Environment ": "Development"
            },
            "properties": {
                "administratorLogin": "[parameters('datamartserverAdminLogin')]",
                "administratorLoginPassword": "[parameters('datamartserverAdminLoginPassword')]"
            },
            "resources": [
                {
                    "name": "AllowAllWindowsAzureIps",
                    "type": "firewallrules",
