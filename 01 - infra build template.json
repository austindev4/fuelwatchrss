            "apiVersion": "2018-06-01",
            "properties": {},
            "dependsOn": [],
            "location": "australiaeast",
            "tags": {
                "Department ": "Finance",
                "Environment ": "Development"
            },
            "identity": {
                "type": "SystemAssigned"
            }
        }
    ],
    "variables": {
        "datamartserverName": "[concat('datamartserver', uniqueString(resourceGroup().id))]",
